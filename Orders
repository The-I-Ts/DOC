package CMPS280;

public class Orders implements Food,Drinks {
	
	public int CustomerID;
	public String CustomerName;
	public int FoodID;
	public int DrinkID;
	private double CustomerBill;
	public String FoodName;
	public double FoodPrice;
	public String DrinkName;
	public double DrinkPrice;
	
	public Orders() {}
	
	Orders(int CustomerID, String CustomerName, int TableNum, int FoodID, int DrinkID) {
		this.CustomerID = CustomerID;
		this.CustomerName = CustomerName;
		this.FoodID = FoodID;
		this.DrinkID = DrinkID;
		this.CustomerBill = CustomerBill;
		CustomerID++; 
		}
	
	Orders(int FoodID, String FoodName, double FoodPrice) {
		this.FoodID = FoodID;
		this.FoodName = FoodName;
		this.FoodPrice = FoodPrice; 
	}
	
	Orders(int DrinkID, String DrinkName, double DrinkPrice) {
		this.DrinkID = DrinkID;
		this.DrinkName = DrinkName;
		this.DrinkPrice = DrinkPrice;
	}
	
	public void setCustomerID(int CustomerID) {}
	
	public void setCustomerName(String CustomerName) {}
	
	public void setFoodID(int FoodID) {}
	
	public void setDrinkID(int DrinkID) {}

	public void setCustomerBill(double CustomerBill) {}
	
	public int getCustomerID(int CustomerID) {
		return CustomerID; }
	
	public String getCustomerName(String CustomerName) {
		return CustomerName; }
	
	public int getFoodID(int FoodID) {
		return FoodID; }
	
	public int getDrinkID(int DrinkID) {
		return DrinkID; }
	
	public static double getCustomerBill(double CustomerBill) {
		return CustomerBill; }
	@Override
	public String getDrinkName(String DrinkName) {
		return DrinkName; }

	@Override
	public double getDrinkPrice(double DrinkPrice) {
		return DrinkPrice; }

	@Override
	public String getFoodName(String FoodName) {
		return FoodName; }

	@Override
	public double getFoodPrice(double FoodPrice) {
		return FoodPrice; }

	@Override
	public String setDrinkName(String DrinkName) {
		return DrinkName; }

	@Override
	public double setDrinkPrice(double DrinkPrice) {
		return DrinkPrice; }

	@Override
	public String setFoodName(String FoodName) {
		return FoodName; }

	@Override
	public double setFoodPrice(double FoodPrice) {
		return FoodPrice; }

	public static void add(Food food) {
		// TODO Auto-generated method stub
		
	}

	}
